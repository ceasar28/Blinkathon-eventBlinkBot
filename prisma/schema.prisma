generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  chat_id  BigInt    @unique
  Session  Session[]
  Event    Event[]
}

model Session {
  id                      Int     @id @default(autoincrement())
  sessionOn               Boolean @default(false)
  eventName               String?
  description             String?
  location                String?
  startDate               String?
  endDate                 String?
  startTime               String?
  endTime                 String?
  contacts                String?
  email                   String?
  price                   String?
  category                String?
  numberOfTickets         String?
  media                   String?
  walletAddress           String?
  eventNamePromptId       String?
  userAnswerId            String?
  descriptionPromptId     String?
  locationPromptId        String?
  startDatePromptId       String?
  startTimePromptId       String?
  endDatePromptId         String?
  endTimePromptId         String?
  contactPromptId         String?
  emailPromptId           String?
  pricePromptId           String?
  categoryPromptId        String?
  numberOfTicketsPromptId String?
  mediaPromptId           String?
  walletAddressPromptId   String?
  eventDetailMarkdownId   BigInt?
  user                    User    @relation(fields: [chat_id], references: [chat_id], onDelete: Cascade)
  chat_id                 BigInt
}

model Event {
  id                    Int     @id @default(autoincrement())
  eventName             String?
  description           String?
  location              String?
  startDate             String?
  endDate               String?
  startTime             String?
  endTime               String?
  contacts              String?
  email                 String?
  price                 String?
  category              String?
  numberOfTickets       String?
  media                 String?
  walletAddress         String?
  eventDetailMarkdownId BigInt?
  user                  User    @relation(fields: [chat_id], references: [chat_id], onDelete: Cascade)
  chat_id               BigInt
}
